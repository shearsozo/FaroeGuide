<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tourguide.android.example.com.tourguide">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:launchMode="singleInstance"
        android:theme="@style/AppTheme">
        <activity
            android:name="tourguide.android.example.com.tourguide.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="tourguide.android.example.com.tourguide.ItemListActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".MainActivity"/>
        <activity android:name="tourguide.android.example.com.tourguide.ItemDetailsActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".ItemListActivity" />

    </application>

</manifest>